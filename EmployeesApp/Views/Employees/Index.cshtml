@{
ViewData["Title"] = "Employee List Page";
}
<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
    }

    th {
        background-color: #f2f2f2;
    }

    #btnNewEmployee {
        position: relative;
        display: block;
        border: 1px solid #ccc;
        margin: 100px;
        font-size: 14px;
        text-decoration: none;
        text-align: center;
    }
</style>
<h2>Employee Table</h2>
<table>
    <thead>
    <tr>
        <th>ID</th>
        <th>Last Name</th>
        <th>First Name</th>
        <th>Gender</th>
        <th>Age</th>
        <th>Department</th>
        <th>Program. Lang.</th>
    </tr>
    </thead>
    <tbody>
    @foreach(var e in Model)
    {
    <tr>
        <td>@e.ID</td>
        <td>@e.FirstName</td>
        <td>@e.LastName</td>
        <td>@(e.Gender ? "Male" : "Female")</td>
        <td>@e.Age</td>
        <td>@e.Department.Name</td>
        <td>@e.WorkExperiences[0].ProgrammingLanguage.Name</td>
        <td><a href="/edit?id=@e.ID">Edit</a></td>
        <td><a href="/remove?id=@e.ID">Remove</a></td>
    </tr>
    }
    </tbody>
</table>

<a id="btnNewEmployee" href="/add">Add New Employee</a>